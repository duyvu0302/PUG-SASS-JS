extend ../base/base.pug
block content
    +breadcrumbs([{ link: '/', name: 'Trang chủ' }, { link: './register.html', name: 'Đăng nhập' }])
    section.login
        .container.pb-5.pt-4
            .row
                .col-lg-6
                    p.pb-3 THÔNG TIN ĐĂNG NHẬP
                    form(action="#").form-comment.pb-3
                        .form-row
                            .form-group.col-md-12
                                label(for="inputName") Họ và tên: 
                                    span *
                                input.form-control.rounded-0(type="text" id= "inputName")
                            .form-group.col-md-12
                                label(for="inputEmail") Email: 
                                    span *
                                input.form-control.rounded-0(type="text" id= "inputEmail")
                        .form-checkbox.d-flex.justify-content-between
                            .custom-checkbox
                                input(type="checkbox")#custom-check1
                                label(for="custom-check1").text-span.font-italic Ghi nhớ đăng nhập
                            p.font-italic.text-yellow
                                u Bạn quên mật khẩu ?
                        button.btn.btn-dark.rounded-0 ĐĂNG NHẬP
                .col-lg-6.pb-5
                    p.pb-4 BẠN CHƯA CÓ TÀI KHOẢN ?
                    p.pb-3.text-span Đăng ký tài khoản để mua hàng nhanh hơn. Theo dõi đơn đặt hàng, vận chuyển. Cập nhật các tin tức sự kiện và các chương trình giảm giá của chúng tối. 
                    button.btn.btn-warning.rounded-0.text-white ĐĂNG KÝ