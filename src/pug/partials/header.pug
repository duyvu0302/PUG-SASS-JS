                                            i.fas.fa-caret-right 
                                            a.pl-1(href="#") Hệ thống cửa hàng
                                            ul.nav__mobile-introduce-child
                                                +titleListItem("Hệ thống cửa hàng A1")
                                                +titleListItem("Hệ thống cửa hàng A2")
                                                +titleListItem("Hệ thống cửa hàng A3")
                                        +titleListItem("Chính sách ưu đãi")
                                        +titleListItem("Thông tin tuyển dụng")
                            each title in titleList
                                .col-lg-12
                                    li
                                        a(href=title.link)= title.name
                nav.header__nav.col-lg-11
                    ul.d-flex
                        li.active.position-relative
                            a(href="/") TRANG CHỦ
                            .nav__menu-home.position-absolute
                                .container
                                    .row
                                        .col-lg-9
